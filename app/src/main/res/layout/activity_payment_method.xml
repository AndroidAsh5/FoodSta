<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lenovo.prj.PaymentMethod">


    <RadioGroup
        android:layout_width="269.5dp"
        android:layout_height="330dp"
        android:id="@+id/radiopgroup1"

        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How would you like to pay?"
        android:textStyle="bold"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <RadioButton
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="Paytm(10% cashback on 2nd Txn,min order Rs 300,T and C apply)"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5" />

        <RadioButton
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Mobikwik(15% cashback on every 3rd transaction.T and C apply"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/radioButton3"
        android:layout_alignEnd="@+id/radioButton3" />


        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Online"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  (*Upcoming)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-23.5dp"
            android:id="@+id/textView23"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radioButton5"
            android:layout_toEndOf="@+id/radiopgroup1"
            android:layout_gravity="center_horizontal" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash Payment"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:id="@+id/radioButton6"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(available)"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-24dp"
            android:id="@+id/textView24"
            android:layout_above="@+id/textView21"
            android:layout_toRightOf="@+id/radiopgroup1"
            android:layout_toEndOf="@+id/radiopgroup1"
            android:layout_gravity="center_horizontal" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="26dp"
        android:id="@+id/imageView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20"
        android:layout_alignTop="@+id/radioButton6" />


    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Voucher Code"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/textView21"

        android:layout_below="@+id/radiopgroup1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM ORDER"
        android:layout_marginTop="13dp"
        android:textColor="@color/colorAccent2"
        android:background="@color/colorAccent1"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7"
        android:onClick="notification" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:hint="Voucher Code(Optional)"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView21"
        android:layout_alignEnd="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(*Upcoming)"
        android:id="@+id/textView14"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="95dp"
        android:layout_alignTop="@+id/radiopgroup1"
        android:layout_toRightOf="@+id/radiopgroup1"
        android:layout_toEndOf="@+id/radiopgroup1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(*Upcoming)"
        android:layout_marginLeft="-15dp"
        android:id="@+id/textView22"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/radiopgroup1"
        android:layout_toEndOf="@+id/radiopgroup1" />


</RelativeLayout>
