<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lenovo.prj.showCart">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:id="@+id/view1"


        card_view:cardCornerRadius="12dp"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/basketimage"




            />


    </android.support.v7.widget.CardView>




    <ListView
        android:id="@+id/qw1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Delivery Type    ->"
        android:background="@color/colorAccent1"
        android:textColor="@color/colorAccent2"

        android:id="@+id/buttonAdd1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NET TOTAL"
        android:textSize="25dp"
        android:textStyle="bold"

        android:id="@+id/textView144"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_above="@+id/textView155"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="18dp"
        android:id="@+id/textView155"
        android:layout_above="@+id/buttonAdd1"
        android:layout_toRightOf="@+id/textView144"
        android:layout_toEndOf="@+id/textView144" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(incl. of all Taxes)"
        android:id="@+id/textView166"
        android:layout_below="@+id/textView144"
        android:layout_alignLeft="@+id/textView144"
        android:layout_alignStart="@+id/textView144" />


</RelativeLayout>
